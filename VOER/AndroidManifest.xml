<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.voer.apps"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/VoerTheme" >
        <activity
            android:name="com.voer.apps.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.voer.apps.MyDocument"
            android:label="@string/title_activity_my_document" >
        </activity>
        <activity
            android:name="com.voer.apps.BrowseOnline"
            android:label="@string/title_activity_browse_online" >
        </activity>
        <activity
            android:name="com.voer.apps.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.voer.apps.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
    </application>

</manifest>
